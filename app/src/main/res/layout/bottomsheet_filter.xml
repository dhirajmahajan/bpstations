<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Service"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/open24Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open 24/7" />

        <CheckBox
            android:id="@+id/convStoreCeckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convenience Store" />

        <CheckBox
            android:id="@+id/convStoreServeCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prepare and serve hot food" />

        <CheckBox
            android:id="@+id/bpFuelCardCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept BP Fuel Cards" />

        <TextView
            android:id="@+id/distanceLabel"
            android:text="Max distance: 50 km"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/distanceSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="500"
            android:progress="50"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/reset" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
